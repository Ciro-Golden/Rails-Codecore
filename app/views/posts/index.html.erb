<h1>Listing All Posts</h1>

<% @posts.each do |post| %>
<div class="card">
<div class="col-sm-12 col-sm-offset-2">
 <div class="well well-lg">
   <div class="card-header">

    <%= link_to post.title, post_path(post) %>
    </div>
    <div class="card-body">
      <%= truncate(post.description, length: 100) %>
      <div class="post-meta-details">
        <small>Created by: <%= post.user.username if post.user%> <!--(post.user) will give us the user who is associated with this post. -->
          <%= time_ago_in_words(post.created_at) %> ago,
          last updated: <%= time_ago_in_words(post.updated_at) %> ago </small>
      </div>  
    </div>
    <div class="post-actions">
        <%= link_to "Edit this Posting", edit_post_path(post), class: "btn btn-sm btn-primary" %> 
        <%= link_to "Delete this Post", post_path(post), method: :delete, 
        data: { confirm: "Are you sure you want to Delete the Post?"}, 
        class: "btn btn-sm btn-danger" %>
    </div>
    </div>
    </div>
    </div>
    <% end %>
