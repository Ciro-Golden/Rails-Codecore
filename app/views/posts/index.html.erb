<h1>Listing All Posts</h1>

<% @posts.each do |post| %>
<div class="card">
<div class="col-sm-12 col-sm-offset-2">
 <div class="well well-lg">
   <div class="card-header">

    <%= link_to post.title, post_path(post) %>
    </div>
    <div class="card-body">
      <%= truncate(post.description, length: 100) %>
    </div>
    <div class="post-actions">
        <%= link_to "Edit this Posting", edit_post_path(post), class: "btn btn-sm btn-primary" %> 
        <%= link_to "Delete this Post", post_path(post), method: :delete, data: { confirm: "Are you sure you want to Delete the Post?"}, class: "btn btn-sm btn-danger" %>
    </div>
    </div>
    </div>
    </div>
    <% end %>
