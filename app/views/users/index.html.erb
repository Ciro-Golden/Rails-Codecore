<h1>All Posts From Bloggers</h1>
<div>
  <%= will_paginate @posts, :page_links => false %>

    <% @users.each do |user| %>
        <ul class="listing">
          <div class="row">
            <div class="well col-md-4 col-md-offset-4">
              <li><%= link_to gravatar_for(user), user_path(user) %></li>
              <li class="post-title">
                <%= link_to user.username, user_path(user) %>
                </li>
                <li><small><%= pluralize(user.posts.count, "post") if user.posts %></small></li>
            </div>
        </div>
    </ul>

 <% end %>
 <%= will_paginate @posts, :page_links => false %>

</div>